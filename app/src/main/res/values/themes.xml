<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/uscred</item>
   <item name="actionBarStyle">@style/CustomActionBar</item>
   <item name="android:actionBarTabTextStyle">@style/CustomActionBarTabs.Tabtheme</item>
   <item name="actionBarTabTextStyle">@style/CustomActionBarTabs.Tabtheme</item>
   <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent = "Widget.AppCompat.ActionBar.Solid">
      <item name="android:textColor">@color/white</item>
      <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomActionBarTabs.Tabtheme" parent="@style/Widget.AppCompat.ActionBar.TabText">
       <!-- <item name="titleTextStyle">@style/MyActionBarTabText</item>-->
        <item name="android:textColor">@color/grey</item>
        </style>



    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.Tabtheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">


        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Tabtheme</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabTextStyle.Tabtheme</item>

    </style>

    <style name="ActionBarTabTextStyle.Tabtheme" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>